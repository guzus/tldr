{
  "manifest_version": 3,
  "name": "TLDR",
  "version": "2.0.2",
  "description": "Summarize the content of any webpage using OpenAI API.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}